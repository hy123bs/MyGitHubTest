<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnTest1"
            android:text="btnTest1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>


        <Button
            android:onClick="Test2"
            android:id="@+id/btnTest2"
            android:text="btnTest2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <Button
            android:onClick="Test3"
            android:id="@+id/btnClear"
            android:text="btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>

        <Button
            android:onClick="Test4"
            android:id="@+id/btnUndo"
            android:text="btnUndo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>



    </LinearLayout>
    <tw.com.hy123.mygithubtest.MyView
        android:id="@+id/myview"
        android:background="#ff0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>